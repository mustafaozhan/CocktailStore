<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/myRelativeLayoutRandomdFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:paddingTop="10sp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mImgCocktailRandomDetails"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_centerHorizontal="true"
                android:paddingTop="10sp"
                app:border_color="@color/colorAccent"
                app:border_width="1sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mTxtRandomCocktailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/myRelativeLayoutRandomdFragment"
            android:gravity="center"
            android:padding="5sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/blue_grey_800" />

        <TextView
            android:id="@+id/mTxtRandomInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mTxtRandomCocktailName"
            android:gravity="center"
            android:padding="5sp"
            android:textColor="@color/blue_grey_800" />

        <View

            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/mTxtRandomInformation"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="10sp"
            android:paddingRight="10sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myRecyclerViewRandomRecipes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/v" />


    </RelativeLayout>
</FrameLayout>